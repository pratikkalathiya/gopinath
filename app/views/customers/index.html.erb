<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Customer Details</h3>
        </div>
        <div class="panel-body">
          <div class="text-right"> <%= link_to 'New Customer', new_customer_path ,:class=>"btn btn-info"%></div>
          <br/>
          <table class="table table-responsive">
            <thead>
            <tr>
              <th>Email</th>
              <th>First name</th>
              <th>Last name</th>
              <th>Address</th>
              <th>Mobile no</th>
              <th colspan="2"></th>
            </tr>
            </thead>

            <tbody>
            <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.email_id.downcase %></td>
                  <td><%= customer.first_name.downcase.camelize %></td>
                  <td><%= customer.last_name.downcase.camelize %></td>
                  <td><%= customer.address %></td>
                  <td><%= customer.mobile_no %></td>
                  <td><%= link_to 'Show', customer %></td>
                  <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>