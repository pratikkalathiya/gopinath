<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Stock Details</h3>
      </div>
      <div class="panel-body">
        <div class="text-right"> <%= link_to 'New Stock', new_stock_path ,:class=>"btn btn-info"%></div>
        <br/>
        <table class="table table-responsive">
          <thead>
          <tr>
            <th>Company Name</th>
            <th>Product type</th>
            <th>Box Code</th>
            <th>Batch no</th>
            <th>Quantity</th>
            <th>Purchase price</th>
            <th>Sales price</th>
            <th>Added Date</th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @stocks.order('id desc').each do |stock| %>
              <%if stock.quantity==0%>
                <tr style="background-color: #d5d5d5">
              <%elsif stock.quantity>1 and stock.quantity<=15%>
                <tr style="background-color: orange">
              <%else%>
                  <tr style="background-color: greenyellow">
              <%end%>
                <td><%= stock.company.company_name%></td>
                <td><%= stock.product_type.name %></td>
                <td><%= stock.product.box_code %></td>
                <td><%= stock.batch_no %></td>
                <td><%= stock.quantity %></td>
                <td><%= stock.purchase_price %></td>
                <td><%= stock.sales_price %></td>
                <td><%= stock.created_at.strftime('%D') %></td>
                <td><%= link_to 'Show', stock %></td>
                <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>